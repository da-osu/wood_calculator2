<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9E3DF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/maincalbtn"
        android:layout_width="270dp"
        android:layout_height="108dp"
        android:text="main calculation"
        android:textStyle="bold"
        app:cornerRadius="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <Button
        android:id="@+id/kparukparubtn"
        android:layout_width="246dp"
        android:layout_height="92dp"
        android:text="okparukparu"
        android:textStyle="bold"
        app:cornerRadius="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/maincalbtn"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="@+id/maincalbtn"
        app:layout_constraintTop_toBottomOf="@+id/maincalbtn"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/okparumiss"
        android:layout_width="225dp"
        android:layout_height="110dp"
        android:text="okpar/missing"
        android:textStyle="bold"
        app:cornerRadius="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/kparukparubtn"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/kparukparubtn"
        app:layout_constraintTop_toBottomOf="@+id/kparukparubtn"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/missbtn"
        android:layout_width="204dp"
        android:layout_height="95dp"
        android:text="missing"
        android:textStyle="bold"
        app:cornerRadius="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/okparumiss"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/okparumiss"
        app:layout_constraintTop_toBottomOf="@+id/okparumiss"
        app:layout_constraintVertical_bias="0.097" />

    <Button
        android:id="@+id/aboutbtn"
        android:layout_width="218dp"
        android:layout_height="95dp"
        android:text="about"
        android:textStyle="bold"
        app:cornerRadius="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/missbtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/missbtn"
        app:layout_constraintTop_toBottomOf="@+id/missbtn"
        app:layout_constraintVertical_bias="0.154" />


</androidx.constraintlayout.widget.ConstraintLayout>